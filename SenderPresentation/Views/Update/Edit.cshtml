@model SenderPresentation.Models.Update

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Update</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StockId" class="control-label"></label>
                <input asp-for="StockId" class="form-control" />
                <span asp-validation-for="StockId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockName" class="control-label"></label>
                <input asp-for="StockName" class="form-control" />
                <span asp-validation-for="StockName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockValue" class="control-label"></label>
                <input asp-for="StockValue" class="form-control" />
                <span asp-validation-for="StockValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!--input type="submit" value="Update" class="btn btn-primary"
                onclick="window.location.href =document.getElementById('StockId').value +'/'+ document.getElementById('StockName').value +'/'+ document.getElementById('StockValue').value; return false;" /-->
                <input type="submit" value="Update/Edit" class="btn btn-primary"
                       onclick=myFunc() />
            </div>
        </form>
    </div>
</div>

<script>
    function myFunc() { window.open('https://localhost:44363/send/' + document.getElementById('StockId').value + '/' + document.getElementById('StockName').value + '/' + document.getElementById('StockValue').value); }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
